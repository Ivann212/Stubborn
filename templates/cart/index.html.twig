{% extends 'base.html.twig' %}

{% block title %}Hello CartController!{% endblock %}

{% block body %}
<style>
    
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    html, body {
        height: 100%;
        font-family: Arial, sans-serif;
    }

    .page-wrapper {
        display: flex;
        flex-direction: column;
        min-height: 100vh; /* Cela garantit que la page occupe toute la hauteur de l'écran */
    }

    header {
    background-color: #333;
    color: #fff;
    padding: 20px 0;
    }

    header .container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px;
    }

    .logo-link img {
        width: 150px;
        height: auto;
    }

    nav ul {
        list-style: none;
        display: flex;
        gap: 20px;
    }

    nav ul li {
        display: inline-block;
    }

    nav ul li a {
        color: #fff;
        text-decoration: none;
        font-size: 1.1rem;
    }

    nav ul li a:hover {
        color: #ff9900;
    }

    main {
        flex: 1; /* Cette propriété assure que l'élément main prend tout l'espace disponible */
        padding: 20px;
    }

    footer {
        background-color: #333;
        color: #fff;
        padding: 30px 0;
        text-align: center;
    }

    .footer-content {
        display: flex;
        justify-content: space-around;
        flex-wrap: wrap;
        margin-bottom: 20px;
    }

    .footer-section {
        flex: 1 1 200px;
        padding: 10px;
    }

    .footer-section h4 {
        margin-bottom: 10px;
        font-size: 1.1rem;
        color: #ff9900;
    }

    .footer-section p {
        font-size: 1rem;
    }

    .footer-bottom {
        font-size: 2rem;
        margin-top: 20px;
        border-top: 1px solid #666;
        padding-top: 10px;
    }

    .footer a {
        color: #ff9900;
        text-decoration: none;
    }

    .footer a:hover {
        text-decoration: underline;
    }


</style>

<div class="example-wrapper">
    <header>
            <div class="container">
                <div class="logo">
                    <a href="/" class="logo-link"><img src="{{ asset('images/Logo.png') }}" alt="Logo"></a>
                </div>
                <nav>
                    <ul class="nav-links">
                        {% if app.user is not null %}
                            <li><a href="/">Accueil</a></li>
                            <li><a href="/product">Produits</a></li>
                            <li><a href="/cart">S'inscrire</a></li>
                            <li><a href="/logout">Se déconnecter</a></li>
                        {% else %}
                            <li><a href="/">Accueil</a></li>
                            <li><a href="/login">Se connecter</a></li>
                            <li><a href="/register">S'inscrire</a></li>
                        {% endif %}
                    </ul>
                </nav>
            </div>
        </header>
</div>
{% endblock %}
