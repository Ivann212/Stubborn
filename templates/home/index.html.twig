{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<style>
    /* Applique un style global de réinitialisation */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    html, body {
        height: 100%;
        font-family: Arial, sans-serif;
    }

    .page-wrapper {
        display: flex;
        flex-direction: column;
        min-height: 100vh; /* Cela garantit que la page occupe toute la hauteur de l'écran */
    }

    main {
        flex: 1; /* Cette propriété assure que l'élément main prend tout l'espace disponible */
        padding: 20px;
    }

    footer {
        background-color: #333;
        color: #fff;
        padding: 30px 0;
        text-align: center;
    }

    .footer-content {
        display: flex;
        justify-content: space-around;
        flex-wrap: wrap;
        margin-bottom: 20px;
    }

    .footer-section {
        flex: 1 1 200px;
        padding: 10px;
    }

    .footer-section h4 {
        margin-bottom: 10px;
        font-size: 1.1rem;
        color: #ff9900;
    }

    .footer-section p {
        font-size: 1rem;
    }

    .footer-bottom {
        font-size: 0.9rem;
        margin-top: 20px;
        border-top: 1px solid #666;
        padding-top: 10px;
    }

    .footer a {
        color: #ff9900;
        text-decoration: none;
    }

    .footer a:hover {
        text-decoration: underline;
    }


</style>

<body>
    <div class="page-wrapper">
        <main>
            <h1>Bienvenue sur notre site</h1>
            
        </main>

        <footer>
            <div class="container">
                <div class="footer-content">
                    <div class="footer-section">
                        <h4>Nom de la société</h4>
                        <p>Stubborn</p>
                    </div>
                    <div class="footer-section">
                        <h4>Adresse</h4>
                        <p>Piccadilly Circus, London W1J 0DA, Royaume-Uni</p>
                    </div>
                    <div class="footer-section">
                        <h4>Contact</h4>
                        <p>Email: <a href="mailto:stubborn@blabla.com">stubborn@blabla.com</a></p>
                    </div>
                    <div class="footer-section">
                        <h4>Slogan</h4>
                        <p>Don't compromise on your look</p>
                    </div>
                </div>
                <div class="footer-bottom">
                    <p>&copy; 2025 Stubborn. All rights reserved.</p>
                </div>
            </div>
        </footer>
    </div>
</body>
{% endblock %}
